@model Model.EF.Car
@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var province = (List<Model.EF.Province>)ViewBag.Province;
    var listNewCars = (List<Model.EF.Car>)ViewBag.NewCars;
    var listFeatureCars = (List<Model.EF.Car>)ViewBag.ListFeatureCars;
    var listNewContents = (List<Model.EF.Content>)ViewBag.ListNewContents;

}
 @section jsFooter{
     <script>
            //disable typing in date picker input
         $(document).ready(function () {
             var minDate = new Date();
             $("#pickup").datepicker({
                 showAnim: 'drop',
                 numberOfMonths: 1,
                 minDate: minDate,
                 dateFormat: 'dd-mm-yy',
                 onClose: function (selectedDate) {
                     $('#dropoff').datepicker("option", "minDate", selectedDate);
                 }
             });
             $("#dropoff").datepicker({
                 showAnim: 'drop',
                 numberOfMonths: 1,
                 minDate: minDate,
                 dateFormat: 'dd-mm-yy',
                 onClose: function (selectedDate) {
                     $('#return').datepicker("option", "minDate", selectedDate);
                 }
                 //disable typing in date picker input end
             });
         });
    </script>
}
<div class="main-wrapper">
    <!-- start hero-header -->
    <div class="hero" style="background-image:url('Content/User/img/landing.jpeg');">
        <div class="container">
            <div class="hero-texting">
                <!-- Hero heading -->
                <h1 style="color:white">Thuê xe tự lái - RenOto</h1>
                <!-- Hero subheading -->
            </div>
            <div class="main-search-wrapper">
                <div class="inner animated">
                    <form class="row gap-20">
                        <div class="col-xs-12 col-sm-12 form-lg">
                            <div class="typeahead-container form-group form-icon-right">
                                <label class="destination-search-3">Chọn tỉnh thành</label>
                                <div class="typeahead-field">
                                    <select class="form-control" name="province">
                                        <option value="" disabled selected hidden>Chọn tỉnh thành</option>
                                        @foreach (var item in province)
                                        {
                                            <option value="@item.ID">@item.Name</option>
                                        }

                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row col-xs-12 col-sm-12 col-sm-">
                            <div class="col-md-4">
                                <div class="form-group form-icon-right">
                                    <label>Ngày nhận Xe</label>
                                    <input name="pickup_date" id="pickup" class="dates form-control" placeholder="Chọn ngày" type="text" readonly="">
                                    <i class="fa fa-calendar"></i>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group form-icon-right">
                                    <label>Ngày trả xe</label>
                                    <input name="dropoff_date" id="dropoff" class="dates form-control" placeholder="Chọn ngày" type="text" readonly="">
                                    <i class="fa fa-calendar"></i>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 text-center">
                                    <button type="submit">
                                        <a class="btn btn-block btn-primary btn-lg btn-icon" href="/FindCar">TÌM KIẾM <span class="icon"><i class="fa fa-search"></i></span></a>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="container pt-50 pb-60">
        <div class="row">

            <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">

                <div class="section-title">
                    <h2>Xe mới</h2>
                </div>

            </div>

        </div>

        <div class="top-destination-wrapper">
            <div class="GridLex-gap-20-wrapper">

                <div class="GridLex-grid-noGutter-equalHeight GridLex-grid-center">
                    @foreach (var item in listNewCars)
                    {

                        <div class="GridLex-col-3_sm-4_xs-6_xss-12">

                            <div class="top-destination-item">

                                <a href="/Car/Detail/@item.MetaTitle/@item.ID">
                                    <div class="image">
                                        <img src="@item.Image" alt="Top Destinations">
                                    </div>
                                    <div class="content">
                                        <div class="row gap-10">
                                            @foreach (var item2 in province)
                                            {
                                                if (item2.ID == item.ProvinceId)
                                                {
                                                    <div class="col-xs-7 place">
                                                        <h4> @item.Name</h4>
                                                        <p>@item2.Name</p>
                                                    </div>
                                                }
                                            }
                                            <div class="col-xs-5 price">
                                                <p>Thuê ngay</p>
                                                <p class="icon"><i class="ri ri-chevron-right-circle"></i></p>
                                            </div>

                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>

                    }
                </div>
            </div>
        </div>

    </div>
    <div class="clear"></div>

    <div class="bg-primary newsletter-wrapper">

        <div class="container">

            <div class="GridLex-grid-middle">

                <div class="GridLex-col-6_sm-12_xs-12 pt-0 pb-0">
                    <div class="text-holder">
                        <h3>Đăng ký nhận tin tức</h3>
                        <p>Đăng ký để nhận những tin tức mới nhất, những ưu đãi, khuyến mãi cực sốc</p>
                    </div>
                </div>

                <div class="GridLex-col-6_sm-12_xs-12 pt-0 pb-0">
                    <form class="footer-newsletter row gap-10">

                        <div class="col-xss-12 col-xs-8 col-sm-8">

                            <input type="email" placeholder="Nhập Email" class="form-control mb-0" name="email">

                        </div>

                        <div class="col-xss-12 col-xs-4 col-sm-4 mt-10-xss">
                            <input type="submit" class="btn btn-block btn-danger" value="Gửi">
                        </div>

                    </form>
                </div>

            </div>

        </div>

    </div>
    <div class="clear"></div>

    <div class="container pt-50 pb-60">

        <div class="container">

            <div class="row">

                <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
                    <div class="section-title">
                        <h2>Xe nổi bật</h2>
                        <p></p>
                    </div>

                </div>

            </div>

            <div class="top-hotel-grid-wrapper">
                <div class="GridLex-gap-20-wrapper">
                    <div class="GridLex-grid-noGutter-equalHeight GridLex-grid-center">
                        @foreach (var item in listFeatureCars)
                        {

                            <div class="GridLex-col-3_sm-4_xs-6_xss-12 mb-20">

                                <div class="hotel-item-grid">
                                    <div class="bg-primary hotel-tag"><i class="fa fa-tag"></i>Giá tốt</div>
                                    <a href="/Car/Detai/@item.MetaTitle/@item.ID">
                                        <div class="image">
                                            <img src="@item.Image" alt="Top Destinations">
                                        </div>
                                        <div class="heading">
                                            <div class="raty-wrapper sp-2 mb-5">
                                                <br />
                                                <span class="star-rate rated-45 mr-10"></span>
                                            </div>
                                            <h4>@item.Name</h4>
                                            @foreach (var item2 in province)
                                            {
                                                if (item2.ID == item.ProvinceId)
                                                {
                                                    <p><i class="fa fa-map-marker text-primary"> @item2.Name</i></p>
                                                }
                                            }

                                        </div>
                                        <div class="content">
                                            <div class="row gap-5">
                                                <div class="col-xs-6 col-sm-6">
                                                    <div class="tripadvisor-module">
                                                        <div class="texting">
                                                            @item.Rate
                                                        </div>
                                                        <div class="hover-underline">@item.CountReview bình luận</div>
                                                    </div>
                                                </div>
                                                <div class="col-xs-6 col-sm-6">
                                                    <p class="price"><span class="block">chỉ từ</span><span class="number">@item.Price VND</span> / ngày</p>
                                                </div>
                                            </div>
                                        </div>
                                    </a>
                                </div>

                            </div>

                        }

                    </div>

                </div>

            </div>

        </div>
    </div>

    <div class="clear"></div>

    <div class="bg-white pt-50 pb-60">
        <div class="container">

            <div class="row">

                <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">

                    <div class="section-title">
                        <h2>Tin tức, Hướng dẫn &amp; Những mẹo đi du lịch</h2>
                        <p>Để những chuyến đi mang lại những trải nghiệm tuyệt vời nhất.</p>
                    </div>

                </div>

            </div>

            <div class="recent-post-wrapper">
                <div class="GridLex-gap-20-wrapper">

                    <div class="GridLex-grid-noGutter-equalHeight GridLex-grid-center">
                        @foreach (var item in listNewContents)
                        {
                            <div class="GridLex-col-6_sm-6_xs-12_xss-12 mb-20">

                                <div class="recent-post">

                                    <div class="image" style="background-image:url('@item.Image');"></div>

                                    <div class="content">

                                        <div class="meta"><i class="fa fa-calendar"></i> <a href="#">@item.CreateDate</a> <span class="mh-5">|</span> <i class="fa fa-user"></i> <a href="#"> @item.CreateBy</a></div>

                                        <h4>@item.Name</h4>

                                        <p>@item.Description...</p>

                                        <a href="~/Content/Detail/@item.ID" class="btn-read-more text-color-03">xem thêm <i class="fa fa-long-arrow-right"></i></a>

                                    </div>

                                </div>

                            </div>
                        }


                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Start feature Area -->
    <div class="clear"></div>
    <div class="container pt-50 pb-60">
        <div class="container">
            <div class="row d-flex justify-content-center">
                <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
                    <div class="single-feature text-center">
                        <h2 class="pb-40">Dịch vụ mà RenOto mang đến</h2>

                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-lg-4 col-md-6">
                        <div class="single-feature">
                            <h3 class="pb-10">
                                <span class="lnr lnr-user"></span> Nhiều lựa chọn
                            </h3>
                            <h class="pb-40">
                                Hàng trăm loại xe đa dạng ở nhiều địa điểm, phù hợp với mọi mục đích của bạn.
                            </h>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <div class="single-feature">
                            <h3 class="pb-10">
                                <span class="lnr lnr-license"></span> Thuận Tiện
                            </h3>
                            <p class="pb-40">
                                Dễ dàng tìm kiếm, so sánh và đặt chiếc xe như ý với chỉ vài click chuột.
                            </p>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <div class="single-feature">
                            <h3 class="pb-10">
                                <span class="lnr lnr-phone"></span> Hỗ trợ 24/7
                            </h3>

                            <p class="pb-40">
                                Có nhân viên hỗ trợ khách hàng trong suốt quá trình thuê xe.
                            </p>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <div class="single-feature">
                            <h3 class="pb-10">
                                <span class="lnr lnr-rocket"></span> Giá cả cạnh tranh
                            </h3>
                            <p>
                                Giá thuê được niêm yết công khai và rẻ hơn 10% so với giá truyền thống.
                            </p>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <div class="single-feature">
                            <h3 class="pb-10">
                                <span class="lnr lnr-diamond"></span> Đáng tin cậy
                            </h3>
                            <p>
                                Các xe đều có thời gian sử dụng dưới 3 năm và được bảo dưỡng thường xuyên.
                            </p>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <div class="single-feature">
                            <h3 class="pb-10">
                                <span class="lnr lnr-bubble"></span> Cập nhật
                            </h3>
                            <p>
                                RenOto luôn cải tiến dịch vụ để phục vụ khách hàng tốt hơn.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
