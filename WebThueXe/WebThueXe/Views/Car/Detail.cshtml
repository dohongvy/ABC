@model Model.EF.Car
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="breadcrumb-wrapper">

    <div class="container">
        <div class="row">

            <div class="col-xs-12 col-sm-8">
                <ol class="breadcrumb">
                    <li>
                        <a href="#">Trang chủ</a>
                    </li>
                    <li>
                        <a href="#">Thông tin xe</a>
                    </li>
                    <li class="active">@Model.Name</li>
                </ol>
            </div>

            <div class="col-xs-12 col-sm-4 hidden-xs">
                <p class="hot-line"></p>
            </div>

        </div>
    </div>
</div>
<div class="two-tone-layout">
    <div class="equal-content-sidebar">
        <div class="container">
            <div id="sticky-sidebar" class="sidebar-wrapper ">
                <aside>
                    <div class="mb-10"></div>
                    <div class="detail-right-sidebar">
                        <div class="price">
                            Chỉ
                            <span class="number">@Model.Price VND</span>
                            Trên ngày
                            <div class="clear mb-10"></div>
                            <a href="/Car/OrderDetail/@Model.MetaTitle/@Model.ID" class="btn btn-block btn-danger btn-icon anchor mt-5">Thuê xe ngay<span class="icon"><i class="fa fa-check-square-o"></i></span></a>
                            <div class="or-text">
                                <span></span>
                            </div>

                        </div>
                        <div class="detail-search-form">
                            <div class="inner">

                            </div>

                        </div>

                        @*<div class="detail-subtotal-price">
                                <h4 class="uppercase">Tổng cộng <a href="#">xem lại</a></h4>
                                <div class="content">
                                    <p class="price-subtotal mb-10"><span class="font600">@Model.Price VND</span>  @Model.Name</p>
                                    <a href="/OrderDetail" class="btn btn-block btn-icon btn-primary">Thuê xe ngay<span class="icon"><i class="fa fa-long-arrow-right"></i></span></a>
                                </div>
                            </div>*@x

                    </div>
                    <div class="mb-30"></div>

                </aside>

            </div>

            <div class="content-wrapper">

                <div class="mb-10"></div>

                <div class="detail-header">
                    <div class="row gap-5">
                        <div class="col-xs-12 col-sm-8 col-md-9">
                            <h2>
                                @Model.Name
                            <span class=""></span>
                        </h2>
                        <p class="mb-0">@Model.Description</p>
                    </div>
                    <div class="col-xs-12 col-sm-4 col-md-3">
                        <a href="#" class="tripadvisor-module text-right">
                            <div class="raty-wrapper">
                                <div class="texting star-rate rated-40"></div>
                            </div>
                            <div class="hover-underline text-muted"></div>
                        </a>
                    </div>
                </div>
            </div>
            <div class="tab-style-01-wrapper mb-40">
                <ul id="detailTab" class="tab-nav clearfix">
                    <li class="active">
                        <a href="#detailTab1" data-toggle="tab">Ảnh</a>
                    </li>
                    <li>
                        <a href="#detailTab2" data-toggle="tab">Chi tiết xe</a>
                    </li>
                    <li>
                        <a href="#detailTab3" data-toggle="tab">Đánh giá</a>
                    </li>
                </ul>
                <div id="myTabContent" class="tab-content">
                    <div class="tab-pane fade in active" id="detailTab1">
                        <div class="tab-content-inner">
                            <div class="slick-gallery-slideshow">
                                <div class="slider gallery-slideshow">
                                    <div>
                                        <div class="image">
                                            <img src="@Model.Image" alt="Images">
                                        </div>
                                    </div>
                                </div>
                                @*<div class="slider gallery-nav">
                                        <div>
                                            <div class="image"><img src="images\detail-gallery\thumb\01.jpeg" alt="Images"></div>
                                        </div>
                                    </div>*@

                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="detailTab2">
                        <div class="tab-content-inner">
                            <h5 class="font400 text-uppercase mb-15 font15">Thông tin xe</h5>
                            <div class="mb-30"></div>
                            @Html.Raw(Model.Detail)
                        </div>

                    </div>
                </div>
            </div>
            <div id="room-availability" class="room-availability mb-40">

                <div class="section-title-3">
                    <h3>Điều khoản</h3>

                </div>
            </div>

            <div class="section-title-3">
                <h3>Tại sao lại chọn RenOto</h3>
                <p class="font500">Dễ dàng thuê xe</p>
            </div>

            <div class="row">

                <div class="col-sm-6">
                    <div class="featured-item-2">
                        <div class="icon">
                            <i class="ion-card"></i>
                        </div>
                        <p>Thanh toán bằng nhiều hình thức </p>
                    </div>
                </div>

                <div class="col-sm-6">
                    <div class="featured-item-2">
                        <div class="icon">
                            <i class="ion-chatboxes"></i>
                        </div>
                        <p>Hỗ trợ 24/7</p>
                    </div>
                </div>

                <div class="col-sm-6">
                    <div class="featured-item-2">
                        <div class="icon">
                            <i class="ion-images"></i>
                        </div>
                        <p>Hình ảnh xe thực tế</p>
                    </div>
                </div>

                <div class="col-sm-6">
                    <div class="featured-item-2">
                        <div class="icon">
                            <i class="ion-pricetags"></i>
                        </div>
                        <p>Giá cạnh tranh</p>
                    </div>
                </div>

            </div>

            <div class="mb-40"></div>

        </div>

    </div>
</div>
</div>
